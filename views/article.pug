include header

div.container-content
  h1= article.title
  a(href="/") ← Back to list
  div 
    div
      if article.author
        p.author Author: #{article.author.username}
      else
        p Unknown author
      p= article.content
      hr
      h2 Коментарі
      if !comments.length
          p Коментарів немає
      else
          each comment in comments
            if comment.visible 
              p= comment.author.username
              p= comment.text
              hr
    div
      if error
            p(style="color:red")= error
      form(method="POST", action=`/${article.url}/comments`)
        div
          textarea(name="comment", placeholder="Comment")
        div
          button(type="submit") Add comment